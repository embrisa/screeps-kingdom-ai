{
  "name": "screeps-kingdom-ai",
  "version": "0.1.0",
  "description": "Autonomous Screeps AI with CI, testing and tooling",
  "license": "MIT",
  "author": "",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "sim:init": "npx screeps init",
    "sim": "npx screeps start",
    "build": "rollup -c",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "test": "jest --runInBand",
    "watch": "rollup -c -w",
    "prepare": "husky install",
    "push": "npx screeps-api upload dist/*.js --branch $SCREEPS_BRANCH --token $SCREEPS_TOKEN"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.11.17",
    "@types/screeps": "^3.3.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "rollup": "^4.12.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-typescript2": "^0.35.0"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  }
}